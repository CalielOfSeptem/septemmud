inherit room
r1 = room.new(roomTypes.outdoor)
r1:SetTitle('Temperate Biome Test')
r1:SetBiomeType(biomeType.temperate)
r1:SetDescription("Enormous trees stand guard like soldiers. ")
r1:AddExit( direction.north, 'workspaces/caliel/workroom:id=0', true)
r1:AddExit( direction.east, 'workspaces/caliel/biomes:id=1', true)
r1:AddExit( direction.west, 'workspaces/caliel/biomes:id=4', true)

r2 = room.new(roomTypes.outdoor)
r2:SetTitle('Arctic Biome Test')
r2:SetBiomeType(biomeType.arctic)
r2:SetDescription("A frozen tundra stretches in all directions. ")
r2:AddExit( direction.west, 'workspaces/caliel/biomes:id=0', true)
r2:AddExit( direction.east, 'workspaces/caliel/biomes:id=2', true)

r3 = room.new(roomTypes.outdoor)
r3:SetTitle('Tropical Biome Test')
r3:SetBiomeType(biomeType.tropical)
r3:SetDescription("Waves pummel a white sandy beach.")
r3:AddExit( direction.west, 'workspaces/caliel/biomes:id=1', true)
r3:AddExit( direction.east, 'workspaces/caliel/biomes:id=3', true)

r4 = room.new(roomTypes.outdoor)
r4:SetTitle('Ash Biome Test')
r4:SetBiomeType(biomeType.ash)
r4:SetDescription("An wasteland covered in ash stretches in all directions.")
r4:AddExit( direction.west, 'workspaces/caliel/biomes:id=2', true)
r4:AddExit( direction.east, 'workspaces/caliel/biomes:id=4', true)

r5 = room.new(roomTypes.outdoor)
r5:SetTitle('Desert Biome Test')
r5:SetBiomeType(biomeType.desert)
r5:SetDescription("Sand dunes.")
r5:AddExit( direction.west, 'workspaces/caliel/biomes:id=3', true)
r5:AddExit( direction.east, 'workspaces/caliel/biomes:id=0', true)