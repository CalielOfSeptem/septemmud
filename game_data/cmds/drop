inherit command
c = command.new('drop')

	
function c:ExecuteCommand ( o_orig, cmd )

	s_type = o_orig:GetType()
	
	if (s_type:lower() ~= "player" and s_type:lower() ~= "npc") then
		return false;
	end
	
	o = living_cast(o_orig)
	if ( o == nil ) then 
		return false 
	end	
	
	local myTable = cmd:split( ' ' )
	if #myTable ~= 2 then
		usage(o)
		return true;
	end
	
	-- remove drop portion
	table.remove(myTable, 1)
	
	local s1 = myTable[1]
	
	--local my_o = o:RightHand:GetItem()
	
	--if( my_o ~= nil and my_o:GetName
	
	if( o:RightHand():IsEmpty() == false ) then
		local itemName = o:RightHand():GetItem():GetName():lower():split( ' ' )
		for j = 1, #itemName do
			if( itemName[j]:starts(s1) ) then
				local room = o:GetRoom()
				itemobj = o:RightHand():GetItem()
				room:AddToInventory( itemobj )	
				o:SendToPlayer('You drop ' .. itemobj:GetName() .. '.')	
				local pname = string.gsub(o:GetName(), "(%a)([%w_']*)", titleCase)
				o:SendToRoom( pname .. ' drops ' .. itemobj:GetName() .. '.')				
			end
		end
		return true;
	end
	
	if( o:LeftHand():IsEmpty() == false ) then
	
		local itemName = o:LeftHand():GetItem():GetName():lower():split( ' ' )
		for j = 1, #itemName do
			if( itemName[j]:starts(s1) ) then
				local room = o:GetRoom()
				itemobj = o:LeftHand():GetItem()
				room:AddToInventory( itemobj )	
				o:SendToPlayer('You drop ' .. itemobj:GetName() .. '.')	
				local pname = string.gsub(o:GetName(), "(%a)([%w_']*)", titleCase)
				o:SendToRoom( pname .. ' drops ' .. itemobj:GetName() .. '.')		
			end
		end
		return true;
	end
	
	o:SendToPlayer('Drop what?')

end

function usage(o_orig)
	o_orig:SendToEntity('USAGE: drop <Implement me later>')
end
